<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".frags.ArticleFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/colorPrimary">

        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/border_tags"
                android:backgroundTint="@color/blue_01"
                android:gravity="center"
                android:text="科幻"
                android:textSize="9sp"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/border_tags"
                android:backgroundTint="@color/red_01"
                android:gravity="center"
                android:text="言情"
                android:textSize="9sp"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/border_tags"
                android:backgroundTint="@color/red_02"
                android:gravity="center"
                android:text="历史"
                android:textSize="9sp"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/border_tags"
                android:backgroundTint="@color/red_01"
                android:gravity="center"
                android:text="科普"
                android:textSize="9sp"
                tools:ignore="SmallSp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="这是标题\n"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_article"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="40"
                android:text="@string/content"
                style="@style/SecondaryTextAppearance"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
