<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme -->
    <style name="AppTheme" parent="AppTheme.private">
        <item name="android:textColor">@color/textColorAccent</item>
        <item name="android:textSize">14sp</item>

    </style>

    <!--默认文字样式-->
    <style name="MyDefaultTextAppearance">
        <item name="android:textColor">@color/textColorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--长文本样式-->
    <style name="SecondaryTextAppearance">

        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="TabBarTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextStyle.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--折叠标题栏标题样式-->
    <style name="CollapseTextStyle">
        <item name="android:text">Black Bird</item>
        <item name="android:textColor">@color/textColorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">100dp</item>
    </style>

</resources>
